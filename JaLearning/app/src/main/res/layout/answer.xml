<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_volume_down_black_24dp"
            android:id="@+id/ibLoa" />
        <View
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:background="@color/chglib_background_default_divider_color" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvNumberQues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_weight="0.5"
            android:textSize="17sp"
            android:text="1/10"/>
        <TextView
            android:id="@+id/tvDemlui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="30dp"
            android:layout_weight="0.5"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:text="aaaaaaaa"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvQues"
        android:layout_gravity="center"
        android:padding="30dp"
        android:text="nihongo"
        android:textSize="35sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView_tickA" />
            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView_tickB" />
            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView_tickC" />
            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView_tickD" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvA"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/border_textview"
                android:text="a"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/tvB"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:background="@drawable/border_textview"
                android:text="b"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/tvC"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:background="@drawable/border_textview"
                android:text="c"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/tvD"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:background="@drawable/border_textview"
                android:text="d"
                android:textSize="25sp"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>