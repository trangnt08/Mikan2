<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <com.msquare.widget.mprogressbar.MProgressBar
            android:padding="20dp"
            android:id="@+id/mprocess"
            app:strokeWidth="25dp"
            app:progress="5"
            app:secondaryProgress="15"
            app:backgroundColor="#ebc7c4c4"
            app:progressColor="#e45eff00"
            app:secondaryProgressColor="#ff5f33"
            app:primaryCapSize="25"
            app:secodaryCapSize="25"
            app:primaryCapVisibility="false"
            app:secodaryCapVisibility="false"
            android:layout_width="240dp"
            android:layout_height="240dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textStyle="bold"
            android:textColor="#eeff3700"
            android:textSize="25sp"
            android:id="@+id/txt_secondsleft"
            android:layout_alignRight="@+id/mprocess"
            android:layout_alignLeft="@+id/mprocess"
            android:gravity="center"
            android:layout_alignBottom="@+id/mprocess"
            android:layout_alignTop="@+id/mprocess"
            />

    </RelativeLayout>
</LinearLayout>